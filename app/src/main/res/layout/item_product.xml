<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="subproduct"
            type="com.example.titshop.model.SubProduct" />
        <variable
            name="callback"
            type="com.example.titshop.callback.ProductCallback" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="7dp"
        card_view:cardElevation="@dimen/margin_5dp_"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivProduct"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_item_collection"
                android:onClick="@{(view)->callback.onProductClick(subproduct)}"
                android:scaleType="centerCrop"
                android:src="@mipmap/bg"
                bind:imageUrl="@{subproduct.imageUrl}"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ivProduct"
                android:layout_marginLeft="@dimen/margin_10dp_"
                android:layout_marginBottom="@dimen/margin_10dp_"
                android:background="@drawable/bg_oval"
                android:padding="@dimen/margin_10dp_"
                android:text="NEW"
                android:textColor="@color/colorWhite"
                android:textSize="8sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignRight="@id/ivProduct"
                android:layout_margin="@dimen/margin_10dp_"
                android:onClick="@{(view)->callback.onLikeClick(view,subproduct)}"
                android:background="@drawable/bg_circle"
                android:padding="4dp"
                bind:islike="@{subproduct.description}"
                android:src="@drawable/ic_favorite_black_24dp"
                android:tint="@color/colorGrey" />


            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="30"
                android:onClick="@{(view)->callback.onProductClick(subproduct)}"
                android:layout_marginRight="@dimen/margin_10dp_"
                android:layout_marginLeft="@dimen/margin_10dp_"
                android:layout_below="@id/ivProduct"
                android:layout_marginTop="@dimen/margin_10dp_"
                android:padding="@dimen/margin_5dp_"
                android:text="@{subproduct.name}"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textview_content" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_10dp_"
                android:onClick="@{(view)->callback.onProductClick(subproduct)}"
                android:layout_marginLeft="@dimen/margin_10dp_"
                android:layout_below="@id/tvName"
                android:layout_marginTop="@dimen/margin_10dp_"
                android:padding="7dp"
                android:text="@{subproduct.price}"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/textview_small" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>