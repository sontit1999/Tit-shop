<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="login"
            type="com.example.titshop.ui.login.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.login.LoginActivity"
        android:background="@color/colorbgLoginRegister">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHonirataal"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_account"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/loginintoaccount"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margin_20dp_"
            android:layout_marginRight="@dimen/margin_20dp_"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textview_tittle"
            android:gravity="left"
            android:layout_marginBottom="@dimen/margin_20dp_"
            app:layout_constraintBottom_toTopOf="@id/layout_login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <LinearLayout
            android:id="@+id/layout_login"
            android:orientation="vertical"
            android:padding="@dimen/margin_10dp_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20dp_"
            android:layout_marginRight="@dimen/margin_20dp_"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@id/guidelineHonirataal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/custom_layout">
            <TextView
                android:id="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:layout_marginLeft="@dimen/margin_10dp_"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/textview_content" />

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:padding="@dimen/margin_15dp_"
                android:textColor="@color/colorBlack"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="@dimen/textview_content"
                />
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrey"
                android:layout_below="@+id/edt_email"/>

           <RelativeLayout
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <EditText
                   android:id="@+id/edt_password"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:singleLine="true"
                   android:padding="@dimen/margin_15dp_"
                   android:hint="@string/pass"
                   android:layout_toLeftOf="@id/txt_forgot"
                   android:inputType="textPassword"
                   android:textSize="@dimen/textview_content"
                   android:background="@drawable/custom_layout" />
               <TextView
                   android:id="@+id/txt_forgot"
                   android:layout_width="wrap_content"
                   android:layout_centerInParent="true"
                   android:layout_height="wrap_content"
                   android:text="@string/forgot"
                   android:textSize="@dimen/textview_small"
                   android:layout_alignParentRight="true" />
           </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="@dimen/margin_20dp_"
            android:layout_marginRight="@dimen/margin_20dp_"
            android:background="@drawable/custom_btn_login"
            android:layout_marginTop="@dimen/margin_20dp_"
            app:layout_constraintTop_toBottomOf="@+id/guidelineHonirataal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <LinearLayout
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_15dp_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvNoAccount"
                android:text="@string/noaccount"
                android:textSize="@dimen/textview_content"
                android:textColor="@color/colorGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvSignUp"
                android:text="@string/signup"
                android:textSize="@dimen/textview_content"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>