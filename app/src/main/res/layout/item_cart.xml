<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="product"
            type="com.example.titshop.model.Product" />
        <variable
            name="callback"
            type="com.example.titshop.callback.CartCallback" />
    </data>
        <RelativeLayout
            android:layout_marginTop="@dimen/margin_10dp_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivProduct"
                android:onClick="@{(view)->callback.onProductClick(product)}"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/bg"
                bind:imageUrl="@{product.imageUrl}"></ImageView>
            <LinearLayout
                android:orientation="vertical"
                android:layout_toLeftOf="@id/llNumber"
                android:layout_toRightOf="@id/ivProduct"
                android:onClick="@{(view)->callback.onProductClick(product)}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5dp_"
                    android:layout_toRightOf="@id/ivProduct"
                    android:padding="@dimen/margin_5dp_"
                    android:text="@{product.name}"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textview_content" />

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvName"
                    android:maxLength="30"
                    android:layout_toRightOf="@id/ivProduct"
                    android:padding="7dp"
                    android:text="@{product.price}"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textview_small" />
                <TextView
                    android:id="@+id/tvSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvName"
                    android:maxLength="30"
                    android:layout_toRightOf="@id/ivProduct"
                    android:padding="7dp"
                    android:text="Size : l"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/textview_small" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llNumber"
                android:orientation="horizontal"
                android:gravity="center|center_vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/ib_tru"
                    android:onClick="@{(view)->callback.ongiam(product)}"
                    android:src="@drawable/ic_remove_black_24dp"
                    android:background="@null"
                    android:layout_width="@dimen/margin_15dp_"
                    android:layout_height="@dimen/margin_15dp_"/>
                <TextView
                    android:id="@+id/tvNumber"
                    android:text="1"
                    android:layout_marginLeft="@dimen/margin_10dp_"
                    android:layout_marginRight="@dimen/margin_10dp_"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/textview_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageButton
                    android:id="@+id/ib_cong"
                    android:src="@drawable/ic_add_black_24dp"
                    android:background="@null"
                    android:onClick="@{(view)->callback.ontang(product)}"
                    android:layout_width="@dimen/margin_15dp_"
                    android:layout_height="@dimen/margin_15dp_"/>
            </LinearLayout>
        </RelativeLayout>
</layout>