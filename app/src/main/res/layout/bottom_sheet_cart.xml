<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/margin_10dp_"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
            android:id="@+id/tvMyCart"
            android:text="My card"
            android:textStyle="bold"
                android:layout_alignParentLeft="true"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/textview_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvNumberItem"
                android:text="2 items"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/textview_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCart"
            android:layout_marginTop="@dimen/margin_10dp_"
            android:layout_width="match_parent"
            android:layout_height="220dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTotal"
                android:text="Total amount"
                android:layout_below="@id/viewngang"
                android:layout_marginTop="@dimen/margin_10dp_"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/textview_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvMonney"
                android:text="99$"
                android:layout_below="@id/viewngang"
                android:layout_marginTop="@dimen/margin_10dp_"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textview_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:id="@+id/viewngang"
                android:background="@color/colorBlack"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/margin_10dp_"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btnCheckout"
            android:text="Checkout"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="@dimen/margin_10dp_"
            android:layout_marginTop="@dimen/margin_20dp_"
            android:layout_marginRight="@dimen/margin_10dp_"
            android:background="@drawable/bg_confirm"
            app:layout_constraintTop_toBottomOf="@id/llTotal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Button>
    </LinearLayout>
</androidx.cardview.widget.CardView>